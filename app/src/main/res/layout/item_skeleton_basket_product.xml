<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="24dp"
        android:background="#F3F3F3">

        <View
            android:id="@+id/dummy_basket_product_name"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="90dp"
            android:background="#E2E2E2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dummy_basket_product"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:background="#E2E2E2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="136:72"
            app:layout_constraintStart_toStartOf="@id/dummy_basket_product_name"
            app:layout_constraintTop_toBottomOf="@id/dummy_basket_product_name"
            tools:srcCompat="@tools:sample/avatars" />

        <View
            android:id="@+id/dummy_content_top"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="12dp"
            android:background="#E2E2E2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dummy_basket_product"
            app:layout_constraintTop_toBottomOf="@id/dummy_basket_product_name" />

        <View
            android:id="@+id/dummy_content_middle"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:background="#E2E2E2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dummy_basket_product"
            app:layout_constraintTop_toBottomOf="@id/dummy_content_top" />

        <View
            android:id="@+id/dummy_content_bottom"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:background="#E2E2E2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dummy_basket_product"
            app:layout_constraintTop_toBottomOf="@id/dummy_content_middle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
