<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">

        <View
            android:id="@+id/dummy_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#E2E2E2"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/dummy_name"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:background="#E2E2E2"
            android:ellipsize="end"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@id/dummy_product"
            app:layout_constraintStart_toStartOf="@id/dummy_product"
            app:layout_constraintTop_toBottomOf="@id/dummy_product" />

        <View
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="36dp"
            android:background="#E2E2E2"
            app:layout_constraintEnd_toEndOf="@+id/dummy_product"
            app:layout_constraintStart_toStartOf="@+id/dummy_product"
            app:layout_constraintTop_toBottomOf="@id/dummy_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
